{% javascripts
    filter="uglifyjs2" output="js/theme/gravity_admin/require.js"
    "@theme_gravity_admin/Resources/assets/vendor/requirejs/require.js"
%}
<script type="text/javascript" src="{{ asset_url }}"></script>
<script type="text/javascript">{% spaceless %}
    requirejs.config({
        baseUrl: '/bundles'
    });

    require(['common'], function(common){
        require([
            {% if requirejs_module is defined -%}
                {%- for m in requirejs_module -%}
                    '{{ require_asset(m) }}'{% if not loop.last %},{% endif %}
                {%- endfor -%}
            {% else %}
            'app/main'
            {% endif %}
        ]);
    });
{% endspaceless %}</script>
{% endjavascripts %}
